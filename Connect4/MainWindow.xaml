<Window x:Name="Window" x:Class="Connect4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Connect4"
        mc:Ignorable="d"
        Title="Connect 4" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#1F1E1E" BorderThickness="0 0 0 4" Padding="0 0 0 4">
            <Grid  x:Name="GameMenu" Background="#3D3B3C" Height="50" HorizontalAlignment="Left">
              
            </Grid>
        </Border>

        <Grid x:Name="GameGrid" Grid.Row="1"/>
    </Grid>
</Window>
